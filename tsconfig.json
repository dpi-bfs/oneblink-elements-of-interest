{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "./out",
    "baseUrl": ".",
    "sourceMap": true,
    "types": ["node"]      
  },
  "include": [
    "src/**/*", "eslintrc.config.js"
  ]
} 
